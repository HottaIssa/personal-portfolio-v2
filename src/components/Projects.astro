---
import { data } from '@mocks/projects.json'
import Cards from '@components/CardProject.astro'
import SectionInfo from './SectionInfo.astro'
---

<section class='grid lg:grid-cols-2 mx-16 py-8'>
  <div class='flex flex-col gap-4 items-center bg-[#8ea4d2]'>
    {data.map((project) => <Cards info={project} />)}
  </div>
  <SectionInfo title='Proyectos' description='Estos son mis proyectos' />
</section>
