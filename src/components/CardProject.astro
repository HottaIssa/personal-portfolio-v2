---
const { info } = Astro.props
import Tags from '@components/Tags.astro'
import { Image } from 'astro:assets'
---

<div
  class=`flex flex-col lg:grid lg:grid-cols-3 outline-1 outline-white/20 sm:w-full rounded-lg overflow-hidden shadow-lg ${info.color} group hover:scale-105 transition-transform duration-300`
>
  <div class='flex justify-center h-full items-center relative'>
    <div
      class='absolute group-hover:bg-[#f0f0f0]/50 z-10 w-full h-full transition ease-in-out duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100'
    >
      <div
        class='absolute inset-0 bg-black/60
              opacity-0 group-hover:opacity-100
              transition-opacity duration-300
              flex items-center justify-center'
      >
        <a
          class='flex items-center gap-2 text-sm
              bg-emerald-500 hover:bg-emerald-400
              text-slate-900 font-semibold
              px-2 py-1 rounded-lg
              translate-y-4 opacity-0
              group-hover:translate-y-0 group-hover:opacity-100
              transition-all duration-300 cursor-pointer'
        >
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='size-4'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5'
            ></path>
          </svg>
          <span>Code</span>
        </a>
      </div>
    </div>
    <Image
      class='object-cover object-center h-48 w-full'
      src={info.image}
      alt=''
      inferSize={true}
    />
  </div>
  <div class='flex flex-col px-4 py-2 col-span-2 gap-2 justify-around'>
    <h2 class='text-lg'>{info.title}</h2>
    <p>{info.description}</p>
    <div class='flex flex-wrap gap-2'>
      {
        info.technologies.map((technologie: any) => (
          <Tags technologie={technologie} />
        ))
      }
    </div>
  </div>
</div>
