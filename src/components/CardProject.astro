---
const { info } = Astro.props
import Tags from '@components/Tags.astro'
import { Image } from 'astro:assets'
---

<div
  class='flex flex-col lg:grid lg:grid-cols-3 sm:w-full rounded-lg overflow-hidden border-2 bg-[#4c9f70] border-[#496f5d]'
>
  <div class='flex justify-center h-full items-center'>
    <Image
      class='object-cover object-center h-48 w-full'
      src={info.image}
      alt=''
      inferSize={true}
    />
  </div>
  <div class='flex flex-col px-4 py-2 col-span-2 gap-2 justify-around'>
    <h2 class='text-lg'>{info.title}</h2>
    <p>{info.description}</p>
    <div class='flex flex-wrap gap-2'>
      {info.tags.map((tag: string) => <Tags tag={tag} />)}
    </div>
  </div>
</div>
