---
const { info } = Astro.props
import Tags from '@components/Tags.astro'
---

<div
  class='flex flex-col lg:grid lg:grid-cols-3 rounded-lg sm:max-w-3/5 overflow-hidden'
>
  <div class='flex justify-center bg-[#8ea4d2] w-full h-full items-center'>
    <img
      class='object-cover object-center h-48 w-full'
      src={info.image}
      alt=''
    />
  </div>
  <div class='flex flex-col px-4 py-2 col-span-2'>
    <h2>{info.title}</h2>
    <p>{info.description}</p>
    <div class='flex gap-2'>
      {info.tags.map((tag: string) => <Tags tag={tag} />)}
    </div>
  </div>
</div>
